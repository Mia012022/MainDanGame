    <!-- 中間內容 start -->

    <div class="my_container">
        <h1>您的購物車</h1>
        <div class="main">
            <div class="itembox">
                <div class="itembt">
                    <div class="continuebt">
                        <a href="javascript: void(0)" class="btn">
                            繼續購買
                        </a>
                    </div>
                    <div class="removebt">
                        <a href="javascript: void(0)" class="btn">
                            清除所有項目
                        </a>
                    </div>
                </div>
            </div>

            <div class="checkbox">
                <p class="totalprice"></p>
                <p class="tax">銷售稅將於結帳時計算</p>
                <hr />
                <a href="#" class="gotocheckbtn">
                    <span>結帳</span>
                    <svg width="13px" height="10px" viewBox="0 0 13 10">
                        <path d="M1,5 L11,5"></path>
                        <polyline points="8 1 12 5 8 9"></polyline>
                    </svg>
                </a>
            </div>
        </div>

        <hr / style="color: aqua;">
        <h4>本周熱門</h4>
        <div class="swiperbox">
            <div class="swiperlist">

                @foreach (var apprank in Model.AppRank)
                {
                <div class="photo">
                    <div class="card mycard" style="width: 15rem">
                                <img src="@apprank.headerImage"
                             class="card-img-top"
                             alt="..." />
                        <div class="card-body" style="width: 15rem">
                            <h5 class="card-title" style="font-size: 15px">
                                    @apprank.appName
                            </h5>
                            <p class="card-text text-truncate marquee" style="font-size: 12px;">
                                        <span>@apprank.appDesc</span>
                            </p>
                            <div class="gowhere">
                                        <a href="/Game/@apprank.appId">去逛逛</a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>

        <hr / style="color: aqua;">
        <h4>好友加購</h4>
            <swiper-container class="mySwiperFriend" space-between="30" slides-per-view="3">
            @{
                List<int> AppIds = new List<int>();
            }
            @foreach (var appDetail in Model.AppDetails)
            {
                if (AppIds.Contains(appDetail.AppId))
                {
                    continue;
                }
                AppIds.Add(appDetail.AppId);
                    <swiper-slide>
                        <div class="card" style="height: 315px;">
                            <img src="@appDetail.HeaderImage)" class="card-img-top" alt="@appDetail.AppName">
                            <div class="card-body">
                                
                                <div style="position:absolute; bottom: 10px; left: 15px;">
                                    <button class="btn btn-secondary" onclick="window.open('/Game/@appDetail.AppId')">
                                        詳細資訊
                                    </button>
                                    <span class="card-title">@appDetail.AppName</span>
                                </div>
                                <div style="position:absolute; bottom: 10px; right: 15px;">
                                    <button class="btn btn-secondary float-end">
                                        <a href="" class="list-group-item-action">
                                            <i class="bi bi-cart-plus"></i>
                                        </a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </swiper-slide>
            }
            </swiper-container>
        
    </div>

    <!-- 中間內容 end -->
