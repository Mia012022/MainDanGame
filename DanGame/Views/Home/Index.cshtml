<style>
	.carousel-container {
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		width: 100%;
		margin: auto;
		overflow: hidden;
	}

	.carousel-wrapper {
		display: flex;
		transition: transform 0.5s ease;
		margin: 0 -140px; 
	}

	.game-card {
		flex: 0 0 280px; 
		margin: 10px;
		border: none;
		border-radius: 10px;
	}

		.game-card img {
			width: 100%;
		}

	.game-card-more{
		position: absolute;
		bottom: 5px;
	}
	.carousel-control {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		width: 40px;
		height: 40px;
		background-color: rgba(0, 0, 0, 0.5);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		color: #fff;
		font-size: 20px;
	}

	.carousel-control-prev {
		left: 180px;
		width: 50px;
		height: 50px;
		background-color: indigo;
	}

	.carousel-control-next {
		right: 168px;
		width: 50px;
		height: 50px;
		background-color: indigo;
	}

	.my-footer {
		background-color: rgb(202, 202, 202, 0.5);
	}

	.text-topbox{
		backdrop-filter: blur(5px);
		border-radius: 20px;
		background: rgba(255, 255, 255, 0.3);
		display: grid;
		justify-content: center;
		box-shadow: rgba(255,255,255, 0.25) 10px 30px 28px, rgba(255,255,255, 0.12) 0px 15px 30px, rgba(255,255,255, 0.12) 0px 6px 10px, rgba(255,255,255, 0.17) 0px 10px 13px, rgba(255,255,255, 0.09) 0px 5px 10px;
	}

	.bg-topbox{
		background-image: linear-gradient(to right, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0.5)), linear-gradient(to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.1)), url("/image/HLEGACY.jpg");
		background-repeat: no-repeat;
		background-size: cover;
	}

	.my-header {
		position: fixed;
		top: -80px; 
		left: 0;
		right: 0;
		background: linear-gradient(to bottom, #fec7ff, #cc7edd, #8c56c5);
		z-index: 1000;
		transition: top 0.5s;
		height: 60px;
		backdrop-filter: blur(0px);
	}
</style>

