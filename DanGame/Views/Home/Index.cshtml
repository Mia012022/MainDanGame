<script>

	// 頁首

	$(document).ready(function () {
		// 顯示和隱藏導航欄的函數
		function showHeader() {
			$(".my-header").css({
				"top": "0px",
				"transition": "top 0.5s",
				"backdrop-filter": "blur(5px)"
			});
		}

		function hideHeader() {
			$(".my-header").css({
				"top": "-80px",
				"transition": "top 0.5s",
				"backdrop-filter": "blur(0px)"
			});
		}

		// 預設隱藏導航欄
		hideHeader();

		// 滚动时显示或隐藏导航栏
		$(window).on("scroll", function () {
			let value = $(document).scrollTop() > 20;
			if (value) {
				showHeader();
			} else {
				hideHeader();
			}
		});

		// 當鼠標靠近視窗頂部時顯示導航欄
		$(window).mousemove(function (event) {
			if (event.clientY < 100) { // 當鼠標靠近頂部 100px 範圍內時
				showHeader();
			} else {
				hideHeader();
			}
		});

		// 當鼠標進入或離開 .my-header 時顯示或隱藏導航欄
		$(".my-header").hover(
			function () {
				showHeader(); // 顯示導航欄
			},
			function () {
				if ($(document).scrollTop() <= 15) {
					hideHeader(); // 隱藏導航欄
				}
			}
		);

		$("#prevButton").on("click", () => moveCarousel(1))
		$("#nextButton").on("click", () => moveCarousel(-1))

		$("input[name='options']").eq(0).prop("checked", true).parent().addClass("checkbgc");

		// 初始化顯示第一個 my-subscription，隱藏其他的 my-subscription
		$(".my-subscription").hide();
		$(".my-subscription").eq(0).show();

		$("#selectButton").on("click", () => { 
			let planID = $("input[name='options']:checked").attr("plan_id")
			window.open(`\ShoppingCart/Gotosubscriptcheck/${planID}`)
		})

		// 監聽單選按鈕的點擊
		$("input[name='options']").change(function () {
			// 獲取當前選中的索引
			var index = $("input[name='options']").index(this);

			// 顯示對應的 my-subscription，隱藏其他的
			$(".my-subscription").hide();
			$(".my-subscription").eq(index).show();

			// 更新選中效果
			$(".checkbgc").removeClass("checkbgc");
			$(this).parent().addClass("checkbgc");
		});

		// 訂閱內容
		$.ajax({
			url: 'http://localhost:5000/api/SubscriptionPlan',
			type: 'GET',
			success: function (data) {
				var subscriptionPlansContainer = $('.subscriptionPlansContainer');
				$.each(data, function (index, plan) {
					var html = '<div class="mw-50 col-sm-9 my-subscription">' +
						'<h4 class="me-3 mt-4 fs-4" style="width: 120px; margin: 20px; background: ' + plan.themeColor + '; border-radius: 20px; padding: 5px; color: white;">' +
						'&#160;' + plan.planName +
						'</h4>' +
						'<p class="ms-5 mt-3 fs-4">&#160;' + plan.description + '</p>' +
						'<p class="ms-5 fs-5">&#160;' + plan.details + '</p>' +
						'<p class="ms-5" style="font-size: 12px;">&#160;' + plan.paymentInfo + '</p>' +
						'<p class="text-end fs-4">&#160; NT$' + plan.price + ' / ' + plan.duration + '<span class="fs-6">( ' + plan.savingInfo + ' )</span></p>' + '</div>'
						;
					subscriptionPlansContainer.append(html);
				});
			},
			error: function (error) {
				console.log(error);
			}
		});
	});

	// 卡片版面

    let currentIndex = 0;
    let totalItems = 0;

    function updateCarousel() {
        const wrapper = document.getElementById('carouselWrapper');
        const offset = -currentIndex * (280 + 20); // Card width (280) + margin (10*2)
        wrapper.style.transform = `translateX(${offset}px)`;
    }

    function moveCarousel(direction) {
        currentIndex = Math.abs(currentIndex + direction) % totalItems;
        updateCarousel();
    }


