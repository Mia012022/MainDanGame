@model IEnumerable<DanGame.Models.ArticleList>;
@{
	ViewData["Title"] = "Search";
	var parser = new DanGame.Helpers.HtmlParser();
}

<style>
	.two-lines {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.hhh {
		height: 100px;
	}

	.bgBody {
		background-image: linear-gradient(to bottom, #EEDFF3 0%, #EEDFF3 100%);
	}

	.frSearchTitle{
		color:black;
	}

	.frSearchTitle:hover{
		color:darkblue;
	}
</style>
<body class="bgBody">

<div class="hhh"></div>
<div class="container">
<h2>搜尋文章</h2>
<ul>

	@foreach (var article in Model)
	{
		var concatenatedContent = parser.ConcatenateParagraphContents(article.ArticalContent);
		<li>
			<a asp-action="Artical" asp-route-id="@article.ArticalId" class=" text-decoration-none">
				<div>
					<h4 class="frSearchTitle">
						@article.ArticalTitle
					</h4>
				</div>

				<div>
					<p class="two-lines text-secondary">@Html.Raw(concatenatedContent)</p>
				</div>
				
			</a>
		</li>
		<hr />
	}

	</ul>
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />

	</div>
</body>